@model MyBakeryFinal.ViewModels.Recipes.AddVM
@{
}

<h2> Add Recipe</h2>

<form action="/Recipes/Add" method="post">
	<div>
		<div class="grid">
			<div class="row mb-2">
				<div class="col-1">
					@Html.LabelFor(m => m.Name)
				</div>
				<div class="col-2">
					@Html.TextBoxFor(m => m.Name)
				</div>
				<div class="col-2">
					@Html.ValidationMessageFor(m => m.Name)
				</div>
			</div>
			<div class="row mb-2">
				<div class="col-1">
					@Html.LabelFor(m => m.Price)
				</div>
				<div class="col-2">
					@Html.TextBoxFor(m => m.Price, new { type = "number" })
				</div>
				<div class="col-2">
					@Html.ValidationMessageFor(m => m.Price)
				</div>
			</div>

			<div class="row mb-2">
				<div class="col-1">
					@Html.LabelFor(m => m.Description)
				</div>
				<div class="col-2">
					@Html.TextAreaFor(m => m.Description)
				</div>
				<div class="col-2">
					@Html.ValidationMessageFor(m => m.Description)
				</div>
			</div>


			<div class="row">
				<div class="col-1">
					<label>Baker: </label>
				</div>
				<div class="col-1">
					<select id="Baker_ID" name="Baker_ID">
						@foreach (var baker in Model.Bakers)
						{
							<option value="@baker.Id">@baker.FirstName @baker.LastName</option>
						}
					</select>
				</div>
			</div>

			
		</div>



		<div class="row mb-2">
			<div class="col-3">
				@Html.ValidationMessage("summaryError")
			</div>
		</div>

		<div class="row mb-2">
			<div class="col-1"></div>
			<div class="col-2">
				<input type="submit" class="right" value="Save" />
				<a href="/Recipes/Index" class="right">Back</a>
			</div>
		</div>
	</div>
</form> 